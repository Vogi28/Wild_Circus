{% extends 'base.html.twig' %}

{% block title %}Shows index{% endblock %}

{% block body %}
    <h1>Shows index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Time</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for show in shows %}
            <tr>
                <td>{{ show.id }}</td>
                <td>{{ show.title }}</td>
                <td>{{ show.time ? show.time|date('H:i:s') : '' }}</td>
                <td>{{ show.description }}</td>
                <td>
                    <a href="{{ path('shows_show', {'id': show.id}) }}">show</a>
                    <a href="{{ path('shows_edit', {'id': show.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('shows_new') }}">Create new</a>
{% endblock %}
